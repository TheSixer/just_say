<view class="page">
  <view class="body">
    <view class="widget" url="storeDetail/index?dealer_id={{item.dealer_id}}&location={{location}}">
      <image mode="aspectFit" class="widget_icon" src="/image/test.png"></image>
      <view class="widget_info">
        <view class="name">
          <text>精选美语一级</text>
          <view class="km">
            <button type="primary" size="mini" class="order">订阅</button>
          </view>
        </view>
        <text class="address">总课程数：72</text>
        <text class="address">价格：50元/月</text>
        <view class="brief">
          <text class="content">Mcguffey's Second Eclectic Reader, Revised Edition, by William Holmes McGuffey</text>
        </view>
      </view>
    </view>

    <view class="course">
      <view class="list">
        <text class="left">课<text class="bold"> 1 </text></text>
        <image class="finished" mode="aspectFit" src="/image/timg.jpg"></image>
        <view class="right">
          <button type="primary" size="mini" class="order">再来一遍</button>
        </view>
      </view>
      <view class="list">
        <text class="left">课<text class="bold"> 2 </text></text>
        <image class="finished" mode="aspectFit" src="/image/timg.jpg"></image>
        <view class="right">
          <button type="primary" size="mini" class="order">再来一遍</button>
        </view>
      </view>
      <view class="list">
        <text class="left">课<text class="bold"> 3 </text></text>
        <!--<image class="finished" mode="aspectFit" src="/image/timg.jpg"></image>-->
        <view class="right">
          <button type="primary" size="mini" class="order">加量学习</button>
        </view>
      </view>
    </view>

    <button type="default" bindtap="download">download</button>
  </view>
</view>
