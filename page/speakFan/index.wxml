<view class="page">
  <view class="body" wx:if="{{hasOrder}}">
    <view class="widget" url="storeDetail/index?dealer_id={{item.dealer_id}}&location={{location}}">
      <image mode="aspectFit" class="widget_icon" src="/image/test.png"></image>
      <view class="widget_info">
        <view class="name">
          <text>精选美语一级</text>
          <view class="km">
            <button type="primary" size="mini" class="order">订阅</button>
          </view>
        </view>
        <text class="address">总课程数：72</text>
        <text class="address">价格：50元/月</text>
        <view class="brief">
          <text class="content">Mcguffey's Second Eclectic Reader, Revised Edition, by William Holmes McGuffey</text>
        </view>
      </view>
    </view>

    <view class="course">
      <view class="list" style="border-bottom: none;">
        <text class="left">课<text class="bold"> 1 </text></text>
        <!--<image class="finished" mode="aspectFit" src="/image/timg.jpg"></image>-->
        <view class="right">
          <button id="1" type="primary" size="mini" class="order" bindtap="toStudy">预习</button>
        </view>
      </view>
    </view>
  </view>
  <view class="body" wx:if="{{hasOrder}}">
    <view class="widget" url="storeDetail/index?dealer_id={{item.dealer_id}}&location={{location}}">
      <image mode="aspectFit" class="widget_icon" src="/image/test.png"></image>
      <view class="widget_info">
        <view class="name">
          <text>精选美语一级</text>
          <view class="km">
            <!--<button type="primary" size="mini" disabled="{{hasOrder}}" class="order"></button>-->
          </view>
        </view>
        <text class="address">总课程数：72</text>
        <text class="address" style="color:#D20D25;">有效期：{{order.expire}}</text>
        <view class="brief">
          <text class="content">Mcguffey's Second Eclectic Reader, Revised Edition, by William Holmes McGuffey</text>
        </view>
      </view>
    </view>

    <view class="course">
      <view class="list" wx:for="{{array}}" wx:key="id">
        <text class="left">课<text class="bold"> {{item.course}} </text></text>
        <image class="finished" mode="aspectFit" src="/image/timg.jpg"></image>
        <view class="right">
          <button id="{{item.id}}" type="primary" size="mini" class="order" bindtap="toStudy">再来一遍</button>
        </view>
      </view>
    </view>

    <view class="course">
      <view class="list" style="border-bottom: none;">
        <text class="left">课<text class="bold"> {{last}} </text></text>
        <!--<image class="finished" mode="aspectFit" src="/image/timg.jpg"></image>-->
        <view class="right">
          <button id="{{last}}" type="primary" size="mini" class="order" bindtap="toStudy">学习</button>
        </view>
      </view>
    </view>

  </view>
</view>
