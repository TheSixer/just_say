.page {
    background: #000;
    font-size:36rpx;
    color: #DDD;
}
.playBlock {
    display: block;
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    padding: 30rpx 0 0;
    background: #F3F3F3;
    z-index: 100;
}
.playTime {
    display:inline-block;
    position:absolute;
    text-align:left;
    padding-left:15px;
    color:#333;
    top:50%;
    transform:translateY(-50%);
}
.page-body-button {
    margin: 0;
    text-align: center;
}
.btn {
    display: inline-block;
    padding-bottom: 20rpx;
    border-radius: 70rpx;
}
.status {
    display: inline-block;
}
.btn image {
    width: 100rpx;
    height: 100rpx;
}
.content {
    padding-bottom: 260rpx;
    z-index: 10;
}
.li {
    padding:20rpx 0;
    margin:0 30rpx;
    background: #000;
    /*border-bottom: 1rpx solid #DDD;*/
}
.li:last-child {
    border-bottom: none;
}
.playing {
    width: 30rpx;
    height: 30rpx;
}
.en {
    color:#ddd;
    line-height: 40rpx;
}
.ch {
    color:#ddd;
    margin-top: 5rpx;
    line-height: 48rpx;
    text-indent: 20rpx;
}
.words {
    color:#FFF;
    margin-top: 5rpx;
    padding: 0 25rpx;
    line-height: 48rpx;
}
.currentIndex {
    position:absolute;
    top:50%;
    right:20rpx;
    transform:translateY(-50%);
}
.btn-group {
    position: fixed;
    width: 100%;
    padding: 20rpx 0;
    left: 0;
    bottom: 0;
    background: #FFF;
}
.btn-group .nav {
    display: inline-block;
    width: 50%;
    text-align: center;
}
.word {
    color: #ddca7e;
}
.dict {
    color: #809bbd;
}