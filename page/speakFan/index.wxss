.body {
    height: 100%;
    width: 100%;
}
.widgets {
  background: #ffffff;
  margin-bottom: 30rpx;
}
.widget{
    position: relative;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    padding-left: 240rpx;
    padding-right: 40rpx;
    background-color:#FFF;
    margin-bottom: 20rpx;
}
.widget_icon {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  top: 30rpx;
  left: 30rpx;
  border-radius: 8rpx;
}
.widget__line{
    content: " ";
    position: absolute;
    left: 30rpx;
    top: 0;
    right: 0;
    height: 2rpx;
    background-color: #F0F0F0;
}
.widget__line_first{
    left: 0;
    right: 0;
    background-color: #D8D8D8;
}
.widget_info {
    display: flex;
    flex-direction:column;
    padding-left:10rpx;
}
.widget_info image {
    margin-top: 30rpx;
    margin-bottom: 20rpx;
    width: 160rpx;
    height: 24rpx;
}
.name {
    display: flex;
    height: 40rpx;
    padding:10rpx 0;
    font-size: 32rpx;
    font-weight: bold;
    color: #000;
}
.name .km {
    flex-grow: 1;
    text-align: right;
}
.km button {
    padding-left:5px;
    padding-right:5px;
    width:65px;
    background-color:#ffa500;
    color:#FFFFFF;
    border:#FFFFFF 1px solid;
}
.address {
    font-size: 28rpx;
    color: #666;
    white-space: nowrap;
    overflow: hidden;
    line-height: 46rpx;
}
.brief .content {
    font-size: 28rpx;
    line-height: 38rpx;
    color: #333333;
}