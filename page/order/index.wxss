.body {
    height: 100%;
    width: 100%;
}
.sort {
    display: flex;
    height: 46px;
}
.sort-button {
    width: 33.33333%;
    height: 46px;
    justify-content:center;
    align-items:center;
}
.sort-button button {
    height: 92rpx;
    padding: 6rpx 0;
    line-height: 76rpx;
    font-size: 32rpx;
    background: #fff;
    color: #000;
    border-radius: 0;
    border-right: 2rpx solid #ddd;
    border-bottom: 2rpx solid #ddd;
}
.sort-button button:after {
    content: none;
}
.sort-button button.selected {
    color: #2196f3;
    border-bottom: 4rpx solid #2196f3;
}
.widgets {
  background: #ffffff;
  margin-bottom: 30rpx;
}
.widget{
    position: relative;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    padding-left: 240rpx;
    padding-right: 40rpx;
}
.widget_icon {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  top: 30rpx;
  left: 30rpx;
  border-radius: 8rpx;
}
.widget__line{
    content: " ";
    position: absolute;
    left: 30rpx;
    top: 0;
    right: 0;
    height: 2rpx;
    background-color: #F0F0F0;
}
.widget__line_first{
    left: 0;
    right: 0;
    background-color: #D8D8D8;
}
.widget_info {
    display: flex;
    height: 200rpx;
    flex-direction:column;
    padding-left:10rpx;
}
.widget_info image {
    margin-top: 30rpx;
    margin-bottom: 20rpx;
    width: 160rpx;
    height: 24rpx;
}
.name {
    display: flex;
    padding:10rpx 0;
    font-size: 32rpx;
    font-weight: bold;
    color: #000;
    /*height: 80rpx;*/
}
.name .km {
    flex-grow: 1;
    text-align: right;
}
.km text {
    color: #2196f3;
    font-size: 24rpx;
    font-weight: normal;
}
.address {
    font-size: 28rpx;
    color: #666;
    white-space: nowrap;
    overflow: hidden
}
